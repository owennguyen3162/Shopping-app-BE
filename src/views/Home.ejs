    <div class="main-panel" id="main-panel">
      <div class="panel-header panel-header-sm">
      </div>
      <div class="content">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header">
                <div class="d-flex  justify-content-between">
                  <h4 class="card-title"> list Products</h4>
                  <a href="/home/addProduct">
                    <img style="width: 50px; height: 50px;"
                      src="https://cdn-icons-png.flaticon.com/128/1828/1828817.png" alt="Image" />
                  </a>
                </div>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-striped table-hover">
                    <thead class=" text-primary">
                      <th>
                        #
                      </th>
                      <th>
                        Image
                      </th>
                      <th>
                        Name
                      </th>
                      <th>
                        Price
                      </th>
                      <th class="text-right">
                      </th>
                      <th class="text-right">
                      </th>
                    </thead>
                    <tbody>
                      <%data.forEach((item)=> {%>
                        <tr>
                          <td>
                            <%= item.id %>
                          </td>
                          <td>
                            <img style="width: 60px; height: 60px;" src="/<%= item.image %>" alt="<%= item.name %>" />
                          </td>
                          <td>
                            <%= item.name %>
                          </td>
                          <td>
                            $ <%= item.price %>
                          </td>
                          <td class="text-right">
                            <a href="/home/editProduct/<%=item.id%>">
                              <img style="width: 30px; height: 30px;"
                                src="https://cdn-icons-png.flaticon.com/512/10336/10336582.png" alt="edit" srcset="">
                            </a>
                          </td>
                          <td class="text-right">
                            <img style="width: 30px; height: 30px;"
                              src="https://cdn-icons-png.flaticon.com/128/9068/9068885.png" alt="edit" srcset=""
                              onclick='deleteProduct("<%= item.id%>")'>
                          </td>
                        </tr>
                        <%})%>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
