                <ul class="nav">
                    <li>
                        <a href="/home">
                            <p>Home</p>
                        </a>
                    </li>
                    <li class="active ">
                        <a href="/order">
                            <p>Orders</p>
                        </a>
                    </li>
                    <li>
                        <a href="./tables.html">
                            <p>statistics</p>
                        </a>
                    </li>
                    <li>
                        <a href="/user">
                            <p>User</p>
                        </a>
                    </li>
                    <li>
                        <a href="./user.html">
                            <p>Profile</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-transparent  bg-primary  navbar-absolute">
            <div class="container-fluid">
                <div class="navbar-wrapper">
                    <div class="navbar-toggle">
                        <button type="button" class="navbar-toggler">
                            <span class="navbar-toggler-bar bar1"></span>
                            <span class="navbar-toggler-bar bar2"></span>
                            <span class="navbar-toggler-bar bar3"></span>
                        </button>
                    </div>
                    <a class="navbar-brand" href="#pablo">Table List</a>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation"
                    aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-bar navbar-kebab"></span>
                    <span class="navbar-toggler-bar navbar-kebab"></span>
                    <span class="navbar-toggler-bar navbar-kebab"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navigation">
                    <form>
                        <div class="input-group no-border">
                            <input type="text" value="" class="form-control" placeholder="Search...">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <i class="now-ui-icons ui-1_zoom-bold"></i>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </nav>
        <div class="main-panel" id="main-panel">
            <div class="panel-header panel-header-sm">
            </div>
            <div class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title"> list Orders</h4>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class=" text-primary">
                                            <th>
                                                #
                                            </th>
                                            <th>
                                                Image
                                            </th>
                                            <th>
                                                Quantity
                                            </th>
                                            <th>
                                                Shipping
                                            </th>
                                            <th>
                                                Status
                                            </th>
                                            <th>
                                                Price
                                            </th>
                                            <th>
                                                User
                                            </th>
                                            <th>
                                                Phone
                                            </th>
                                            <th class="text-right">
                                            </th>
                                            <th class="text-right">
                                            </th>
                                        </thead>
                                        <tbody>
                                            <%data.forEach((item)=> {%>
                                                <tr>
                                                    <td>
                                                        <%= item.id %>
                                                    </td>
                                                    <td>
                                                        <% if(item.status==="done" ){ %>
                                                            <img style="width: 60px; height: 60px;"
                                                                src="https://cdn-icons-png.flaticon.com/512/8832/8832119.png"
                                                                alt="Image" />
                                                            <% } %>

                                                                <% if(item.status==="waiting" ){ %>
                                                                    <img style="width: 60px; height: 60px;"
                                                                        src="https://cdn-icons-png.flaticon.com/128/889/889843.png"
                                                                        alt="Image" />
                                                                    <% } %>

                                                                        <% if(item.status==="confirmed" ){ %>
                                                                            <img style="width: 60px; height: 60px;"
                                                                                src="https://cdn-icons-png.flaticon.com/128/7245/7245083.png"
                                                                                alt="Image" />
                                                                            <% } %>

                                                    </td>
                                                    <td>
                                                        <%= JSON.parse(item.cartItem).length %>
                                                    </td>
                                                    <td>
                                                        <%= item.address %> (<%= item.options %>)
                                                    </td>
                                                    <td>
                                                        <%= item.status %>
                                                    </td>
                                                    <td>
                                                        $ <%= item.totalPrice %>
                                                    </td>
                                                    <td>
                                                        <%= item.name %>
                                                    </td>
                                                    <td>
                                                        <%= item.phone %>
                                                    </td>
                                                    <td class="text-right">
                                                        <a href="/order/editOrder/<%=item.id%>">
                                                            <img style="width: 30px; height: 30px;"
                                                                src="https://cdn-icons-png.flaticon.com/512/10336/10336582.png"
                                                                alt="edit" srcset="">
                                                        </a>
                                                    </td>
                                                    <td class="text-right">
                                                        <img style="width: 30px; height: 30px;"
                                                            src="https://cdn-icons-png.flaticon.com/128/9068/9068885.png"
                                                            alt="edit" srcset="">
                                                    </td>
                                                </tr>
                                                <%})%>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <footer class="footer">
                <div class=" container-fluid ">
                    <nav>
