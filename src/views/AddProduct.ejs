        <div class="main-panel" id="main-panel">
            <div class="panel-header panel-header-sm">
            </div>
            <div class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="d-flex  justify-content-between">
                                    <h4 class="card-title"> Add Products</h4>
                                    <a href="/home">
                                        <img style="width: 50px; height: 50px;"
                                            src="https://cdn-icons-png.flaticon.com/128/8022/8022662.png" alt="Image" />
                                    </a>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <form method="post" action="/home/addProduct/store" enctype="multipart/form-data">
                                        <div class="mb-3">
                                            <label for="exampleInputEmail1" class="form-label">Image</label>
                                            <input type="file" class="form-control" id="exampleInputEmail1"
                                                aria-describedby="emailHelp" name="imageProduct" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="exampleInputPassword1" class="form-label">Name</label>
                                            <input type="text" class="form-control" id="exampleInputPassword1"
                                                name="name" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="exampleInputPassword1" class="form-label">Price</label>
                                            <input type="number" class="form-control" id="exampleInputPassword1"
                                                step="0.1" min="0" name="price" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="exampleInputPassword1" class="form-label">Quantity</label>
                                            <input type="number" class="form-control" id="exampleInputPassword1"
                                                name="quantity" min="1" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="exampleInputPassword1" class="form-label">Category</label>
                                            <select class="form-select" aria-label="Default select example"
                                                name="category" required>
                                                <option value="accesories">accesories</option>
                                                <option value="Pant">Pant</option>
                                                <option value="shoes">shoes</option>
                                                <option value="sweaters">sweaters</option>
                                                <option value="Underwear">Underwear</option>
                                                <option value="vans">vans</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label for="exampleInputPassword1" class="form-label">Description</label>
                                            <input type="text" class="form-control" id="exampleInputPassword1"
                                                name="description" required>
                                        </div>
                                        <button type="submit" class="btn btn-primary " style="width: 100%;">ADD
                                            PRODUCT</button>
                                    </form>

                                </div>
